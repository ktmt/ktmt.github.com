</span><span class='line'>
</span><span class='line'><span class="x">&lt;pre&gt;&lt;code&gt;private $author;</span>
</span><span class='line'><span class="x">public function setAuthor($author)</span>
</span><span class='line'><span class="x">{</span>
</span><span class='line'><span class="x">    $this-&amp;gt;author = $author; </span>
</span><span class='line'><span class="x">    var_dump($author-&amp;gt;getName()); // original name</span>
